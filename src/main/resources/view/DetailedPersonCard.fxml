<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.Region?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <HBox nodeOrientation="LEFT_TO_RIGHT">
        <ImageView fx:id="images"/>
        <VBox>
            <HBox>
                <Label fx:id="name"/>
                <Canvas fx:id="starCanvas" height="20" width="20" visible="false"/>
            </HBox>
            <Label fx:id="phone"/>
            <Label fx:id="address"/>
            <Label fx:id="email"/>
            <FlowPane fx:id="tags"/>
        </VBox>
    </HBox>

    <HBox nodeOrientation="LEFT_TO_RIGHT">
        <VBox>
            <Label fx:id="notes" wrapText="true"/>
        </VBox>
        <Region>
            <!-- separator for notes and deadlines -->
        </Region>
        <VBox>
            <Label fx:id="deadlines" wrapText="true"/>
        </VBox>
    </HBox>
</VBox>
